############################################
elegirNumero = int(input('Escribe un número entre 1 y 7: '))
if elegirNumero == 1:
  print('Lunes')
elif elegirNumero == 2:
  print('Martes')
elif elegirNumero == 3:
  print('Miércoles')
elif elegirNumero == 4:
  print('Jueves')
elif elegirNumero == 5:
  print('Viernes')
elif elegirNumero == 6:
  print('Sábado')
elif elegirNumero == 7:
  print('Domingo')
else :
  print('Número fuera de rango')

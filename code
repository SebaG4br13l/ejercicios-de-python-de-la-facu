var = int(input("Ingrese un numero: "))
var2 = int(input("Ingrese un numero: "))

if var < var2:
  print("")
elif var2 < var:
  print(var2)
else:
  print("Son iguales")
var = int(input('ingrese un número entero: '))
var1 = int(input('ingrese otro número entero: '))
if var < var1: 
  print(var, ' Es menor ' )
elif var > var1:
  print(var1,  ' Es menor ' )
else :
  print('Los números son iguales ' )

############################################
pedirEdad = int(input('Indique su edad: '))
if pedirEdad <= 4 :
  print('Usted ingresa gratis')
elif pedirEdad >= 4 and pedirEdad <=18 :
  print('Abona $5')
else :
  print('Abona $10')
